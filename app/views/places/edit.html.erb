<h1>Edit Place</h1>

 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for places:</p>
     <ul>
       <li>Never insult goats.</li>
       <li>Smile when you type.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @place do |f| %>
       <div class="form-group">
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter place name" %>
       </div>
       <div class="form-group">
         <%= f.label :link %>
         <%= f.text_field :link, class: 'form-control', placeholder: "Enter place image URL" %>
       </div>
       <div class="form-group">
         <%= f.label :description %>
         <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter topic description" %>
       </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>
