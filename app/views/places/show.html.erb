<h1><%= @place.name %></h1>

<%= link_to "Edit Place", edit_place_path, class: 'btn btn-success' %>
<%= link_to "Delete Place", @place, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this place?' } %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @place.description %></p>
    <% @place.posts.each do |post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to post.title, place_post_path(@place, post) %>
          </h4>
          <small>
             submitted <%= time_ago_in_words(post.created_at) %> ago <br>
             <%= post.comments.count %> Comments
           </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Post", new_place_post_path(@place), class: 'btn btn-success' %>
  </div>
</div>
